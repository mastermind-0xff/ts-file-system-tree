    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "expect": "^29.0.2",
    "jest": "^29.0.2",
    "jest-environment-jsdom": "^29.0.2",
    "jest-mock": "^29.0.2",
    "karma": "^6.4.0",
